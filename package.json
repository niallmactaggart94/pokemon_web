{
  "name": "pokemon_web",
  "version": "1.0.0",
  "engines": {
    "node": "20",
    "npm": "10"
  },
  "description": "Frontend for Aegon Technical Assessment",
  "main": "index.ts",
  "scripts": {
    "build": "react-scripts --openssl-legacy-provider build",
    "eject": "react-scripts --openssl-legacy-provider eject",
    "start": "react-scripts --openssl-legacy-provider start",
    "test": "react-scripts test",
    "testAll": "CI=true npm test",
    "lint": "eslint --ext ts,tsx src"
  },
  "author": "Niall MacTaggart",
  "license": "ISC",
  "dependencies": {
    "@emotion/styled": "^11.11.5",
    "@mui/material": "5.10.5",
    "@mui/styles": "5.10.9",
    "axios": "1.3.6",
    "classnames": "^2.5.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-query": "3.39.2",
    "react-router": "5.3.4",
    "react-router-config": "5.1.1",
    "react-router-dom": "5.3.4",
    "react-scripts": "5.0.1",
    "typescript": "4.8.4"
  },
  "devDependencies": {
    "@types/jest": "29.1.2",
    "@types/node": "20.8.7",
    "@types/react": "17.0.2",
    "@types/react-dom": "17.0.9",
    "eslint-config-prettier": "8.5.0",
    "prettier": "2.3.2",
    "sass": "1.55.0",
    "@testing-library/react-hooks": "8.0.1",
    "@testing-library/jest-dom": "5.16.5",
		"@testing-library/react": "11.2.7",
    "react-test-renderer": "17.0.2"

  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "env": {
      "jest": true
    }
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!axios)"
    ],
    "testMatch": [
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
